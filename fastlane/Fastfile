default_platform(:ios)

platform :ios do
  desc "Run all tests"
  lane :test do
    scan(scheme: "StreamHaven")
    scan(scheme: "StreamHavenUITests")
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    build_app(scheme: "StreamHaven")
    upload_to_testflight
  end

  desc "Release to App Store"
  lane :release do
    build_app(scheme: "StreamHaven")
    upload_to_app_store
  end
end
